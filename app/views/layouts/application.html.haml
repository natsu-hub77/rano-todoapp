!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title RanoTodoApp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
  
  %body
    %header.header
      .header_logos
        - if !current_page?(root_path)
          = link_to :back do
            = image_tag 'back.png', class: 'header_back'
        %p.header-logo= link_to 'Boards', root_path, class: 'header-logo-link'
      - if user_signed_in?
        .dropdown
          = image_tag 'default-avatar.png', class: 'header_avatar dropbtn'
          .dropdown-content
            = link_to 'ログアウト', destroy_user_session_path, data: { method: 'delete'}
      - if flash.present?
        .flash 
          - flash.each do |key, value|
            .key{class: "%= %"}= value
    = yield
    -# %p.notice= notice
    -# %p.alert= alert
