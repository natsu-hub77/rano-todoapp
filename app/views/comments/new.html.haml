.container 
  %ul
    - @comment.errors.full_messages.each do |message|
      %li= message 
  %h2 New Comment 
  = form_with(model: @comment, url: board_task_comments_path(@board, @comment.task), method: 'post', local: true) do |f|
    %div
      =f.text_area :content
    = f.submit 'submit', class: 'btn-primary'