.container
  %ul
    - @task.errors.full_messages.each do |message|
      %li= message
  %h2 New Card
  = form_with(model: @task, url: board_tasks_path(@board), method: 'post', local: true) do |f|
    %div
      = f.label :title, 'Name'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :content, 'Description'
    %div
      = f.text_area :content
    %div
      = f.label :eyectch, 'アイキャッチ'
    %div
      = f.file_field :eyecatch, class: 'file_field'
    = f.submit 'submit', class: 'btn-primary'